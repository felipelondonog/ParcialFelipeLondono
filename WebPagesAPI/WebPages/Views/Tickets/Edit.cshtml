@model ConcertAPI.DAL.Ticket

@{
    ViewData["Title"] = "Edit";
}

<h4>Boleta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UseDate" />
            <input type="hidden" asp-for="IsUsed" />

            <div class="form-group">
                <label asp-for="EntranceGate" class="control-label"></label>
                <select asp-for="EntranceGate" class="form-control">
                    <option asp_for="EntranceGate" value="Norte">Norte</option>
                    <option asp_for="EntranceGate" value="Oriente">Oriente</option>
                    <option asp_for="EntranceGate" value="Occidente">Occidente</option>
                    <option asp_for="EntranceGate" value="Sur">Sur</option>
                </select>
                <span asp-validation-for="EntranceGate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-success">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}